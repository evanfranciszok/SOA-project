{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "userId": {
        "type": "string"
      },
      "firstName": {
        "type": "string"
      },
      "lastName": {
        "type": "string"
      },
      "portionSize": {
        "type": "string",
        "enum": ["Small", "Medium", "Large"]
      },
      "allergies": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "diet": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": ["userId", "firstName", "lastName", "portionSize", "allergies", "diet"]
  }